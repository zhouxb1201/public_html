/***音频***/
.audio-box {
  background-color: #fff;
  margin: 20rpx 0;
  position: relative;
}
.audio-wrap{
  position: relative;
  display: flex;
}
.audio-box .audio-img {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  flex: none;
  background: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio-box .audio-content {
  width: 100%;
  margin-top: 36rpx;
}

.audio-box .audio-content .title {
  line-height: 34rpx;
  max-height: 70rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  word-break: break-all;
}

.slider {
  margin-top: 12rpx;
  width: 95%;
  position: relative;
  height: 48rpx;
  display: flex;
  align-items: center;
  cursor: default;
  user-select: none;
  outline: none;
}

.slider-track {
  position: absolute;
  height: 4rpx;
  left: 0;
  right: 0;
  top: 50%;
  margin-top: -2rpx;
  background-color: #bec2c1;
  width: 100%;
}

.slider-fill {
  position: absolute;
  height: 4rpx;
  background-color: #ff454e;
  left: 0;
  top: 50%;
  margin-top: -2rpx;
  
}

.slider-thumb {
  position: absolute;
  top: 50%;
  width: 24rpx;
  height: 24rpx;
  background-color: #ff454e;
  color: #ff454e;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  cursor: pointer;
}

.flex-pack-justify {
  display: flex;
  justify-content: space-between;
}

.fs-10 {
  font-size: 20rpx;
}

.startPlayOrPause {
  position: relative;
  top: -10rpx;
}

.pr-12 {
  padding-right: 24rpx;
}

.play-circle-o {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 4rpx solid #ff454e;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-circle-o .player {
  width: 0px;
  height: 0px;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-bottom: 24rpx solid #ff454e;
  transform: rotate(90deg);
  margin-left: 10rpx;
}
.play-circle-o .pause{
  border-left: 4rpx solid #ff454e;
  border-right: 4rpx solid #ff454e;
  width: 8rpx;
  height: 28rpx;
}

.popup-title {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
  position: relative;
}

.popup-title .close {
  position: absolute;
  right: 30rpx;
}

.popup-title .goods-title {
  text-align: center;
  font-size: 32rpx;
}

.popup-title .close .icon-close {
  font-size: 30rpx;
}

.popup-content {
  position: relative;
}

.popup-content .van-cell-group {
  height: 300px;
  overflow-y: scroll;
  background-color: #fff;
  position: relative;
}

.popup-content .col {
  float: left;
  min-height: 2rpx;
  box-sizing: border-box;
}

.popup-content .col--18 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  word-break: break-all;
}

.popup-content .col--18 {
  width: 75%;
}

.popup-content .col--6 {
  width: 25%;
  text-align: right;
}

.popup-content .active {
  color: #ff454e;
}

.popup-content .same {
  display: inline-block;
  margin-right: 4rpx;
}

.popup-content .same text {
  display: inline-block;
  width: 4rpx;
  height: 20rpx;
  margin-bottom: 0;
  background-color: red;
  margin-right: 2rpx;
}

.popup-content .same text.line1 {
  animation: line .6s infinite ease-in-out alternate;
}

.popup-content .same text.line2 {
  animation: line .6s .2s infinite ease-in-out alternate;
}

.popup-content .same text.line3 {
  animation: line .6s .3s infinite ease-in-out alternate;
}

.popup-content .same text.line4 {
  animation: line .6s .15s infinite ease-in-out alternate;
}

@keyframes line {
  0% {
    height: 2rpx
  }

  to {
    height: 30rpx
  }
}

.tag {
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  line-height: normal;
  border-radius: 20rpx;
  display: inline-block;
  background-color: rgb(250, 233, 230);
  color: rgb(255, 69, 78);
}
page{
  font-size: 28rpx;
  background-color: #f8f8f8
}

.fans_list{
  background-color: #fff;
}
.fans_list .item{
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fans_list .item .left{
  display: flex;
  align-items: center;
}
.fans_list .item .left .info{
  margin-left: 20rpx;
  line-height: 50rpx;
}
.fans_list .item .left .img{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
}
.fans_list .item .left .img image{
  width: 100%;
  height: 100%;
}
.fans_list .item .right .btn{
  padding: 10rpx 40rpx;
  border: 1rpx solid #bebcbc;
  color: #bebcbc;
  border-radius: 50rpx;
}
.fans_list .item .right .btn.focused{
  border: 1rpx solid #bebcbc;
  color: #bebcbc;
}
/* miniprogram/packageSecond/pages/goodthingcircle/release/index.wxss */
page {
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.card-group-box {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.05);
}

.cell {
  position: relative;
  display: flex;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  color: #323233;
  font-size: 28rpx;
  line-height: 48rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.cell__value {
  color: #323233;
  overflow: hidden;
  text-align: left;
  position: relative;
  vertical-align: middle;
  flex: 1;
}

.cell__title {
  flex: 1;
  color: #323233;
}

.cell__label {
  color: #969799;
  font-size: 24rpx;
  margin-top: 6rpx;
  line-height: 36rpx;
}

.field__body {
  display: flex;
  align-items: center;
}

.field__control {
  border: 0;
  margin: 0;
  padding: 0;
  width: 100%;
  resize: none;
  display: block;
  color: #323233;
  box-sizing: border-box;
  background-color: transparent;
}

.field__body textarea {
  height: 200rpx;
}

.cell:not(:last-child)::after {
  content: ' ';
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  left: 0;
  right: 0;
  bottom: 0;
  transform: scaleY(.5);
  border-bottom: 1px solid #ebedf0;
}

.card-group-box .cell:not(:last-child)::after {
  left: 0;
}

.upload-wrap {
  overflow: hidden;
  padding: 30rpx 30rpx 30rpx;
  background-color: #ffffff;
  position: relative;
}

.upload-wrap::after {
  content: "";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  transform: scaleY(0.5);
  height: 1px;
  background-color: #ebedf0;
}

.img-group {
  margin: 0 -8rpx;
  overflow: hidden;
}

.img-group .item {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  float: left;
  margin: 8rpx;
}

.img-group .item .img {
  width: 150rpx;
  height: 150rpx;
  background-color: #fff;
  border: none;
  border-radius: 20rpx;
  overflow: hidden;
}

.btn-delete {
  position: absolute;
  z-index: 10;
  border-radius: 40rpx;
  background: #fff;
  right: -8rpx;
  top: -4rpx;
  font-size: 20rpx;
  color: #f02941;
  border: 1rpx solid #f02941;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
}

.upload-img {
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin: 8rpx;
}

.van-uploader {
  position: relative;
  display: inline-block;
}

.uploader {
  position: relative;
  display: flex;
  flex-flow: column;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  border: 1rpx dashed #ddd;
  line-height: 1.2;
  width: 150rpx;
  height: 150rpx;
}

.upload-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -70%);
}

.img_num {
  position: absolute;
  bottom: 6%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 28rpx;
}

.cell-icon-left {
  height: 36rpx;
  line-height: 36rpx;
  margin-right: 10rpx;
  background-color: #cccccc;
  border-radius: 50%;
  padding: 0rpx 6rpx;
  color: #fff;
  margin-top: 6rpx;
  font-size: 24rpx;
}

.cell-icon-right {
  color: #909399;
  height: 48rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  margin-left: 10rpx;
}

.nowrap {
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #969799;
  text-align: right !important;
}

.btn {
  margin: 80rpx 40rpx;
}

.btn button {
  color: #fff;
  background-color: #f44;
  border: none;
  border-radius: 6px;
  appearance: none;
  padding: 0 30rpx;
  font-size: 28rpx;
  width: 100%;
  height: 88rpx;
  line-height: 84rpx;
}

.popup-title {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
  position: relative;
}

.popup-title .close {
  position: absolute;
  left: 30rpx;
  color: #1989fa;
}

.popup-title .goods-title {
  text-align: center;
}

.popup-title .close .icon-left {
  font-size: 24rpx;
}

.goods-list {
  height: 100%;
  box-sizing: border-box;
  max-height: 1000rpx;
  overflow-y: auto;
}

.goods-item {
  display: flex;
}

.goods-item .goods-checkbox {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  width: 40rpx;
}

.goods-item .goods-card {
  flex: 1;
  position: relative;
  color: #323233;
  font-size: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
}

.goods-item .goods-card .img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin-right: 20rpx;
}

.goods-item .goods-card .content {
  position: relative;
  -ms-flex: 1;
  flex: 1;
  height: 100rpx;
}

.goods-item .goods-card .content .title {
  height: 64rpx;
  line-height: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-weight: 700;
}

.goods-item .goods-card .content .bottom {
  width: 100%;
  line-height: 36rpx;
  margin-top: 4rpx;
}

.goods-item .goods-card .content .bottom text:first-child {
  display: inline-block;
  color: #ff454e;
  font-weight: 700;
  margin-right: 20rpx;
}

.goods-item .goods-card .content .bottom text:last-child {
  display: inline-block;
  color: #999;
  font-weight: 700;
  text-decoration: line-through;
}

.btn-bottom {
  padding: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.btn-goods {
  background-color: #f44;
  border: 1rpx solid #f44;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  line-height: 84rpx;
  height: 88rpx;
}

.head-search {
  background: #ffffff;
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.head-search .search-box {
  position: fixed;
  top: 0;
  left: 0;
  height: 92rpx;
  width: 100%;
  z-index: 1002;
  overflow: hidden;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}

.head-search .left-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search {
  margin-left: 10rpx;
  margin-right: 10rpx;
  align-items: center;
  display: flex;
  padding: 8rpx;
  border-radius: 50rpx;
  background-color: #f7f8fa;
  flex: 1;
}

.search-input {
  flex: 1;
  padding-left: 10rpx;
}

.search-action {
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 68rpx;
  color: #323233;
}

.part-list {
  height: 100%;
  box-sizing: border-box;
  max-height: 1000rpx;
  overflow-y: auto;
}

.part-tab-nav {
  overflow: hidden;
  overflow-x: auto;
  box-sizing: content-box;
  display: flex;
  position: relative;
  background-color: #fff;
  margin: 0px 10rpx;
}

.part-tab-nav .tab {
  flex-basis: 22%;
  text-align: center;
  padding: 20rpx 10rpx;
  color: #999;
  overflow: hidden;
}

.part-tab-nav .tab .img {
  width: 150rpx;
  height: 90rpx !important;
  display: block;
  border-radius: 20rpx;
}

.part-tab-nav .tab .text {
  line-height: 48rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.opt {
  position: relative;
}

.opt::before {
  content: "";
  position: absolute;
  pointer-events: none;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 100%;
  transform: scaleY(0.5);
  height: 1px;
  background-color: #ebedf0;
}

.opt .left-icon {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #494848;
  margin-top: 8rpx;
  position: relative;
  margin-right: 10rpx;
}

.opt .left-icon::before {
  content: "";
  width: 100%;
  height: 1px;
  background-color: #494848;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
}

.list {
  position: relative;
}

.thing-type .cell__title{
  width: 90px;
  flex: none;
}
.thing-type van-radio-group{
  display: flex;
}
.thing-type van-radio{
  margin-right: 10px;
}

/***color**/
.cr-blue{
  color: #6790db;
}
.bg-blue{
  background-color: #6790db;
}
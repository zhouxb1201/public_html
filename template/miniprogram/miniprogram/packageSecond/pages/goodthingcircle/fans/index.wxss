page {
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.cell {
  display: flex;
  padding: 20rpx;
  position: relative;
  background-color: #ffffff;
}

.cell::after {
  content: "";
  position: absolute;
  pointer-events: none;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  width: 100%;
  transform: scaleY(0.5);
  height: 1px;
  background-color: #ebedf0;
}

.cell .img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
}

.cell .info {
  flex: 1;
  line-height: 48rpx;
  padding-left: 20rpx;
}

.cell .info text {
  display: block;
}

.cell .info text:last-child {
  font-size: 12px;
  color: #999;
}

.cell .btn {
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cell .btn button {
  border-radius: none;
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
  position: relative;
}

.cell .btn .red {
  background-color: #f44;
  color: #fff;
}

.cell .btn .red::after {
  content: "";
  border: 1px solid #f44;
}

.cell .btn .gray {
  background-color: #fff;
  color: #999;
}

.no_good {
  background-color: #ffff;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no_good .box {
  text-align: center;
  width: 100%;

}

.no_good .box .img {
  max-width: 65%;
  display: block;
  margin: 40rpx auto;
  height: auto;
}
@import "/css/iconfont.wxss";
.menu{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background-color: #fff;
}

.list{
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
}
.list .items{
  flex: 1;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list .items .add_btn{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f44;
  color: #fff;
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
}
.icon{
  font-size: 24rpx;
}
.active {
  font-weight: 700;
  color: #ff454e;
  font-size: 32rpx;
  transition: all 0.2s;
}
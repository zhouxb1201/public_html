.popup-warp {
  display: flex;
  width: 100%;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.popup-warp .popup-input {
  flex: 1;
  border-radius: 1000rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #eee;
}

.popup-warp .popup-text {
  color: #5b92e1;
  padding-left: 20rpx;
}

.video-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.video-box .video {
  width: 100%;
  height: 100%;
}

.video-box .control {
  display: flex;
  width: 100%;
  height: 100vw;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 11;
}

.video-box .control .hide {
  display: none;
}
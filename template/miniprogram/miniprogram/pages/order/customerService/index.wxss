page{
  font-size: 28rpx;
  background-color: #f8f8f8;
}

.customerServie_header{
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  border-bottom: 1px solid #ebedf0;
}
.customerServie_header .good_img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.customerServie_header .good_img image{
  width: 100%;
  height: 100%;
}
.customerServie_header .customerServie_info{
  flex: 1;
  position: relative;
}
.customerServie_header .customerServie_info .good_name{
  font-weight: 700;
}
.customerServie_header .customerServie_info .good_num{
  position: absolute;
  bottom: 0;
  font-size: 24rpx;  
  width: 100%;
}
.customerServie_header .customerServie_info .good_num .num{
  float: right;
}

.customerServie_group{
  background-color: #fff;
  margin-top: 30rpx;
}
.cell{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ebedf0;
  display: flex;
}
.cell .title{
  max-width: 180rpx;
  flex: 1;
}
.cell .value{
  flex: 1;
}
.cell .value .disabled_point{
  background-color: #f5f5f5;
  color: #969799;
  opacity: 1;
}

/* 缩小单选框 */
radio {
  transform:scale(0.8);
}


.foot_btn{
  padding: 60rpx 30rpx;
}
.sub_btn{
  border: 1rpx solid #f44;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background-color: #f44;
  color: #fff;
  border-radius: 50rpx;
}

.refund_result{
  background-color: #fff;
  margin-top: 20rpx;
}
.refund_result .shop_place{
  padding: 20rpx 30rpx;
  border: 1px solid #ebedf0;
}
.refund_result .shop_place .saller_result{
  font-weight: 700;
  line-height: 44rpx;
}
.refund_result .shop_place .saller_info{
  line-height: 44rpx;
}
.refund_result .shop_place .saller_info .name{
  width: 180rpx;
  display: inline-block;
}
.refund_result .shop_place .address{
  line-height: 44rpx;
}



.result_box{  
  background-color: #fff;  
}
.result_box .result_info{
  padding: 0 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}
.result_box .result_info icon{
  margin-right: 20rpx;
}
.result_box .result_info .reject_result{
  font-size: 24rpx;
  color: #909399;
}
.expressBox{
  position: relative;
}
.popup_title{
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 2px solid #f5f5f5;  
  line-height: 48rpx;  
}
.popup_title .search_box{
  display: flex;
  align-items: center;
  background-color: #f7f8fa;
  border-radius: 4rpx;
  padding-left: 20rpx;
  width: 80%;
  height: 68rpx;
}
.popup_content{  
   
}
.popup_content .list .exp_item{
  line-height: 48rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ebedf0;
}

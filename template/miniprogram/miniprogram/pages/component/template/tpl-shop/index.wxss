/* 精选店铺 */
.tpl_shop .tpl_shop_title{
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0;
  margin: 0 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tpl_shop_list{
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
}
.tpl_shop_list .tpl_shop_item{
  width: 33.33%;
  text-align: center;
  margin-bottom: 12rpx;
  height: 100rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.tpl_shop_list .tpl_shop_item .image{
  width:100%;
  height: 100rpx;
}
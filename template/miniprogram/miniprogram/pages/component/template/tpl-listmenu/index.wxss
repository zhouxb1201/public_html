@import "/css/iconfont.wxss";
.listmenu{
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.05);
  font-size: 28rpx;  

}
.listmenu .menu_group .menu_item{
  border-bottom: 1rpx solid #ebedf0;
  display: flex;
  padding: 20rpx 30rpx; 
}
.listmenu .menu_group .menu_item .menu_item_l{
  width: 50%;
  display: flex;
  align-items: center;
}
.listmenu .menu_group .menu_item .menu_item_l .l_text{
  color: rgb(51, 51, 51);
  font-size: 28rpx;
}
.listmenu .menu_group .menu_item .menu_item_l .icon{
  color: rgb(153, 153, 153);
  margin-right: 10rpx;
}
.listmenu .menu_group .menu_item .menu_item_r{
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #909399
}
.listmenu .menu_group .menu_item .menu_item_r .l_remark{
  font-size: 24rpx;
  margin-right: 20rpx;
}

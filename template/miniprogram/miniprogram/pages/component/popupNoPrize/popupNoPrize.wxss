/* miniprogram/pages/component/popupNoPrize/popupNoPrize.wxss */
.popup {
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
  height: 100%;
  width: 100%;
  z-index: 2001;
}
.popup-no-prize-wrap {
  position: relative;
  width: 70%;
  top: 20%;
  left: 15%;
}
.prize {
  position: relative;
  overflow: hidden;
  width: 100%;
  line-height: 0;
}

.prize image {
  width: 100%;
  display: block;
  vertical-align: top;
}
.prize-sad {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: 18%;
  z-index: 99;
}

.prize-win-txt {
  position: absolute;
  top: 2%;
  left: 10%;
  width: 80%;
  z-index: 99;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}
.btn-wrap {
  width: 100%;
  margin: auto;
  display: flex;
  justify-content: center;
}

.btn-wrap .btn {
  padding: 0 16rpx;
  height: 60rpx;
  min-width: 120rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  width: 45%;
  border-radius: 6rpx;
  border: 0;
  -webkit-appearance:none;
  appearance:none;
}

.btn-wrap .btn:after{
  border: 0;
}
.btn-wrap .btn:first-child {
  margin-right: 5%;
  color: #f33559;
  background-color: #fff;
}

.btn-wrap .btn:last-child {
  background-color: #f33559;
  color: #fff;
}
.close {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
  border: 4rpx solid #fff;
  display: block;
  margin: auto;
  margin-top: 40rpx;
  background-color: #fff;
}
.close:before {
  content: "";
  position: absolute;
  left: 28rpx;
  top: 10rpx;
  width: 4rpx;
  height: 40rpx;
  background-color: #333;
  transform: rotate(45deg);
}
.close:after {
  content: "";
  position: absolute;
  left: 28rpx;
  top: 10rpx;
  width: 4rpx;
  height: 40rpx;
  background-color: #333;
  transform: rotate(-45deg);
}
/* miniprogram/pages/component/popupActivityEnd/popupActivityEnd.wxss */

.popup {
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
  height: 100%;
  width: 100%;
  z-index: 2001;
  transition: all 0.2s;
}

.popup-wrap {
  position: relative;
  width: 100%;
  height: 100%;
}

.popup-main-end {
  background-color: #fff;
  width: 80%;
  border-radius: 5px;
  padding: 10px;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.txt-end-title {
  text-align: center;
  color: #333;
  padding: 28rpx;
  font-size: 36rpx;
}

.txt-end-follow {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.end {
  width: 100%;
  margin: auto;
  position: relative;
  padding: 10px;
}

.end image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.btn-wrap {
  width: 100%;
  margin: auto;
  display: flex;
  justify-content: center;
}

.btn-wrap .btn-know {
  padding: 0 16rpx;
  height: 70rpx;
  min-width: 120rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  width: 45%;
  border-radius: 40rpx;
  border: 0;
  -webkit-appearance: none;
  appearance: none;
  background: linear-gradient(to right,#ff6829, #fe1c41);
  background: -webkit-gradient(to right,#ff6829, #fe1c41);
  color: #fff;
}

page{
  font-size: 28rpx;
  background-color: #f8f8f8;
}

.navtop{
   position: fixed;
    width: 100%;
    top: 0;
    padding:0;
    background: #fff;
    z-index: 1000;
}
.shop_search{
  padding: 16rpx 20rpx;
  border-bottom: 2px solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.shop_search .search_input{
  background-color: #f5f5f5;
  display: flex;  
  align-items: center;
  padding: 12rpx;
  flex: 1;
}
.shop_search .reset_btn{
  padding: 0 20rpx;
  color: #323233;
}
.shop_search .search_text{
  width: 95%;
  font-size: 14px;
  height: 40rpx;
  color: rgb(167, 166, 166);
  margin-left: 10rpx;
}
.shop_search .icon{
  color: rgb(167, 166, 166);
}


.sort {
    align-items: center;
    display: flex;
    z-index: 99;
}
.sort .item {
    flex: 1;
    position: relative;
    text-align: center;
    font-size: 28rpx;
    padding: 25rpx 30rpx;
    color: #666;
    vertical-align: middle;
}
.sort .item:first-child {
    border: 0;
}
.sort .item .icon{
  display: inline-block;
}
.sort .item.on text {
    color: #fd5454;
}
.sort .item.on .icon{
  color: #fd5454;
}
.DESC{
  transform:rotate(0deg);
}
.ASC{
  transform:rotate(180deg);
  
}

.shop_box{
  margin-top: 220rpx;
}
.shopItem{
  background-color: #fff;  
  border-radius: 20rpx;
  margin: 20rpx; 
  overflow: hidden;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.05);
}
.shopItem .shop_header{
  padding: 30rpx;
  display: flex;
  
}
.shopItem .shop_header .shop_logo{
  width: 300rpx;
  height: 150rpx;
}
.shopItem .shop_header .shop_logo image{
  width: 100%;
  height: 100%;
}
.shopItem .shop_header .shop_header_r{
  margin-left: 20rpx;
  flex: 1;
}
.shopItem .shop_header .shop_header_r .rate{
  display: flex;
  align-content: center;
  line-height: 50rpx;
}
.shopItem .shop_header .shop_header_r .rate .rate_num{
  margin-left: 10rpx;
}
.shopItem .shop_header .shop_header_r .shop_group{
  font-size: 12px;
  color: rgba(151, 149, 149, 0.904);
}
.shopItem .shop_header .shop_header_r .shop_tag{
  margin-top: 10rpx;
}
.shopItem .shop_header .shop_header_r .shop_tag .tag{
  margin-right: 10rpx;
}
.shopGoodList{
  display: flex;  
  padding: 20rpx 30rpx;
  border-top: 1px solid #ebedf0;
}
.shopGoodList .shopGoodItem{
  margin: 8rpx;
}
.shopGoodList .shopGoodItem .shopgoodImg{
  width: 150rpx;
  height: 160rpx;
}
.shopGoodList .shopGoodItem .shopgoodImg image{
  width: 100%;
  height: 100%;
}
.shopGoodList .shopGoodItem .goodprice{
  color: #f44;
}
.noMore{
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.error{
  text-align: center;  
  position: absolute;
  top: 30%;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
}
.error .error_img image{
  max-width: 65%;
  margin: 0 auto;
  height: auto;
}
.error text{
  margin: 20rpx 0;
  display: block;
}
.error button{
  width: 200rpx;
  font-size: 24rpx;
  background-color: #f44;
  color: #fff;
}
.pb{
  padding-bottom: 200rpx;
}
.group_box .group_cell{
  border-top:  1px solid #ebedf0;
}
.group_box .group_cell .item{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ebedf0;
}
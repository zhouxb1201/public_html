page{
  font-size: 24rpx;
  background-color: #f8f8f8;
}
.success_box{
  background-color: #fff;
}
.success_top{
  text-align: center;
  padding: 20rpx 0;
  border-bottom:1px solid #dbdbdb; 
  background-color: #f44;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
}
.success_top .success_img{
  width: 140rpx;
  margin-bottom: 20rpx;
}


.btn_group{
  text-align: center;
  padding: 40rpx 0;
}
.btn_group text{
  border:1px solid #dbdbdb;
  padding: 10rpx 25rpx;
  margin: 0 20rpx;
}

.join_group{
  background-color: #fff;
  margin: 20rpx 0;
}

.join_group .title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom:1px solid #dbdbdb; 
}
.join_group .title .title_l{
  display: flex;
  align-items: center;
}
.join_group .title .title_l .icon{
  margin-right: 20rpx;
}
.join_group .title .title_r{
  display: flex;
  align-items: center;
}

.group_info{
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}
.group_info .img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}
.group_info .img .leader{
  position: absolute;
  top: 0;
  right: 10rpx;
  font-size: 24rpx;
  background-color: #f44;
  color: #fff;
  padding: 10rpx;
  border-radius: 50%;
}
.group_info .img image{
  width: 100%;
  height: 100%;
}
.help{
  width: 100rpx;
  height: 100rpx;
  border: 1px dashed #999;
  line-height: 100rpx;
  text-align: center;
  font-size: 60rpx;
  border-radius: 50%;
  color: #999;
}

.cell_group{
  border-radius: 20rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.05);
  
}
.cell_group .cell_item{
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  align-items: center;
}
.cell_group .cell_item .text{
  font-size: 28rpx;
}

.address_buy{
  padding: 20rpx 30rpx;
  border-top: 1px solid #ebedf0;
  background-color: #fff;  
}
.address_buy .buy_info{  
  display: flex;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.address_buy .buy_info .phone{
  color: #909399;
}


.wechat_card,.gift_card{
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  align-items: center;
}
.wechat_card .icon{
  font-size: 2.5em;
  color: rgb(255, 151, 106);
  margin-right: 20rpx;
}

.gift_card .icon{
  font-size: 2.5em;
  color: #ff976a;
  margin-right: 20rpx;
}
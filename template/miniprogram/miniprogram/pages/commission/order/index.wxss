page{
  background-color: #f8f8f8;
  font-size: 28rpx;
}



.list .item{
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.05);
}
.collapse_item{
  padding: 20rpx 30rpx;
  display: flex;
  background-color: #fff;
  box-sizing:border-box;
  line-height: 48rpx;
  border-bottom: 1px solid #ebedf0;
}
.collapse_item .title{
  flex: 1;
}
.collapse_item .value{
  flex: 1;
  text-align: right;
}
.collapse_item .icon{
  font-size: 22rpx;
  padding-top: 10rpx;
  margin-left: 10rpx;
  height: 28rpx;
}
.collapse_item .value .status{
  color: #f44;
}

.buyer{
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ebedf0;
}
.buyer .buyer_logo{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.buyer .buyer_logo image{
  width: 100%;
  height: 100%;
}

.goods_list{
  background-color: #fff;
}
.good_item{
  padding: 20rpx 30rpx;
  display: flex;
}
.good_item .good_img{
  width: 180rpx;
  height: 180rpx;
}
.good_item .good_img image{
  width: 100%;
  height: 100%;
}
.good_item .card{
  margin-left: 20rpx;
  position: relative;
  flex: 1;  
}
.good_item .card .card_title{
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
  height: 80rpx;
}
.good_item .card .num{
  text-align: right;
  font-size: 24rpx;
  color: #323233
}
.good_item .card .commission_money{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
}

.rotate{
  transform: rotate(180deg);
  transition-duration: 1s;
  -moz-transition-duration: 1s; /* Firefox 4 */
  -webkit-transition-duration: 1s; /* Safari å’Œ Chrome */
  -o-transition-duration: 1s; /* Opera */
}

.foot{
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #969799;
}
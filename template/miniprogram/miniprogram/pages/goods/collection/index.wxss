page{
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.list{
  background-color: #fff;
}
.list .item{
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ebedf0;
}
.list .item .good_img{
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}

.list .item .good_img image{
  width: 100%;
  height: 100%;  
}
.list .item .good_info{
  position: relative;
  width: 100%;
  flex: 1;
}
.list .item .good_info .good_name{
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
}
.list .item .good_info .price_like{
  position: absolute;
  bottom: 0;  
  width: 100%;
}
.list .item .good_info .price_like .icon{
  float: right;
}
.list .item .good_info .price_like .price_num{
  color: #f44;
  
}

.no_more{
  color: #969799;
  margin: 30rpx 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

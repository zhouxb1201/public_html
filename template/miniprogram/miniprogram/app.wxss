/**app.wxss**/
@import "dist/common/index.wxss";
@import "css/iconfont.wxss";
@import "common/wxParse/wxParse.wxss";

page{
  font-size: 28rpx;
}

/* 超过一行省略 */
.ov_h{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.clear::after {
      content: '';  
      display: block;
      height: 0;
      visibility: hidden;
      clear: both;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
image{
  border: none;
  vertical-align: middle;
  width: 100%;  
}




/* 自定义表单 */
.custom{
  background: #fff;
  padding: 10px 15px;
  box-sizing: border-box;
  line-height: 24px;
  color: #333;
  font-size: 14px;
  border-bottom: 1rpx solid #ebedf0;
  display: flex;
}
.custom .label_text{
  max-width: 90px;
  min-width: 90px;
  display: inline-block;
  flex: 1;
}
.picker{
  display: flex;
}
.date_range{
  display: flex;
  display: -webkit-flex;
}
.custom .range_group{
  margin: -20rpx;
}
.custom .range_group .range_group_cell{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  line-height: 48rpx;  
  position: relative;
}
.border_b{
  border-bottom: 1px solid #ebedf0;
}
.custom .range_group .range_group_cell .range_title{
  width: 180rpx;
}
.customDisplay .checkbox checkbox{
  transform: scale(0.7);
}
.customDisplay .radio radio{
  transform: scale(0.7);
}
.customDisplay{
  display: flex;
}
.customTextarea{
  height: 88rpx;
}
.customSelect picker{
  width: 100%;
}
.customImg{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.customImg .customImgItem{
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}
.customImg .customImgItem image{
  width: 100%;
  height: 100%;
}
.customImg .customImg_btn{  
  border: 1rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
}
.customImg .customImg_btn .customImg_num{
  font-size: 24rpx;
  line-height: 10rpx;
}


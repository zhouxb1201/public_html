page {
  background-color: #f8f8f8;
  font-size:28rpx;
}

.useraddress {
  padding: 30rpx;
  position: relative;
  background-color: #fff;
}

.cart_bottom_bg::before {
  content: '';
  left: 0;
  right: 0;
  bottom: 0;
  height: 2px;
  position: absolute;
  background: repeating-linear-gradient(-45deg, #ff6c6c, #ff6c6c 20%, transparent 0, transparent 25%, #3283fa 0, #3283fa 45%, transparent 0, transparent 50%);
  background-size: 80px;
}

.no_address .adress_text {
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  margin-left: 80rpx;
  font-size: 28rpx;
}

.no_address .icon_add {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
}

.cr_3283fa {
  color: #3283fa;
}

.no_address .icon_arrow {
  position: absolute;
  right: 30rpx;
  bottom: 40rpx;
}

.has_address {
  position: relative;
  font-size: 24rpx;
}

.has_address .icon_location {
  position: absolute;
  left: 0;
  top: 10rpx;
}

.has_address .icon_arrow {
  position: absolute;
  right: 0;
  top: 10rpx;
}

.has_address .address_box {
  margin-left: 70rpx;
}

.has_address .address_box .consigner {
  margin-right: 70rpx;
}

.popup_title{
  padding: 20rpx 30rpx;  
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
  position: relative;
  text-align: center;
}
.popup_title .addressClose{
  position: absolute;
  left: 30rpx;
  color: #1989fa;
}
.popup_title .addressTitle{
  text-align: center;
}
.popup_title .addressClose .icon_left{
  font-size: 24rpx;
}
.popup_info{
  max-height: 780rpx;
  overflow-y: auto;
  font-size: 24rpx;  
}
.popup_info .item{
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
}
.popup_info .item .item_info{
  margin-left: 20rpx;
}
.popup_info .item .cell{
  margin: 10rpx 0;
}
.close{
  padding: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.close .closeBtn{
  background-color: #f44;
  border: 1rpx solid #f44;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
}


.confrim-wrap {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  position: relative;
  min-height: 140rpx;
  background-color: #fff;
  padding: 20rpx;
}

.confrim-left {
  flex: 1;
  display: flex;
  display: -webkit-box;
  display: -ms-flexbox;
}

.confrim-left .img {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  overflow: hidden;
}

.confrim-left .img img {
  width: 100%;
  height: auto;
}

.confrim-goods-info {
  flex: 1;
  padding-left: 20rpx;
  font-size: 28rpx;
}

.confrim-goods-info div:last-child {
  color: #b5b5b5;
  margin-top: 8rpx;
}

.confrim-right {
  color: #fd5b5b;
  font-size: 28rpx;
}

.btn-receive {
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 100;
  position: fixed;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.btn-receive-wrap {
  height: 100rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  font-size: 28rpx;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  background-color: #fff;
}

.action-btn {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 76rpx;
  margin: 10rpx 20rpx;
  border-radius: 16rpx;
  color: #fff;
  background-color: #f44;
  border: 1px solid #f44;
  text-align: center;
  width: 100%;
}

/******门店******/

.store-info {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 80rpx;
  overflow: hidden;
  position: relative;
}

.van-col {
  float: left;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.van-col--14 {
  width: 50%;
}

.van-col--10 {
  width: 46%;
}

.text-right {
  text-align: right;
}
.store-info .icon_arrow {
  position: absolute;
  right: 0;
  top: 6rpx;
}
.close-store{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.close-store .closebtn{
  background-color: #ff454e;
  color: #fff;
  font-size: 16px;
  border-radius: 0;
}
.no_more{
  padding: 30rpx;
  text-align: center;
  color:#86858596;
}
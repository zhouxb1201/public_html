page{
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.group_box{
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 10px 0 rgba(0,0,0,.05);
}
.group_box .cell{
  display: flex;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: #fff;
  color: #323233;
}
.group_box .head{
  border-bottom: 1px solid #ebedf0;
} 
.group_box .goods_info{
  border-bottom: 1px solid #ebedf0;
}
.goods_info .good_img{
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goods_info .info_content{
  flex: 1;
  position: relative;
  font-size: 24rpx;
}
.goods_info .info_content .info_head{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_info .info_content .info_head .good_name{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 380rpx;
  font-weight: 600;
  min-height: 65rpx;
}
.goods_info .info_content .info_bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_info .info_content .info_bottom .good_price{
  color: #f44;
}
.group_foot .foot{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}
.group_foot .foot .foot_text{
  margin-left: 10rpx;
}
.group_foot .foot .foot_text text{
  color: #f44;
}

.foot_submit_bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #fff;
  user-select: none;
  box-shadow:0 -2px 10px rgba(0,0,0,.04);
  border-top:1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}
.foot_submit_bar .price_box{
  display: flex;
  align-items: center; 
  justify-content: flex-end;
  width: 100%; 
}
.foot_submit_bar .price_box .submit_btn{
  width: 110px;
  height: 40px;
  border-radius: 8px;
  text-align: center;
  line-height: 38px;  
  margin: 5px;
}

.foot_submit_bar .price_box .active_goods_btn{
  background-color: #f44;
  border: 1px solid #f44;
  color: #fff;
}
.foot_submit_bar .price_box .price_text{
  margin-right: 10rpx;
}
.foot_submit_bar .price_box .price_text .price_num{
  color: #f44;
  font-size: 37rpx;
  font-weight: 700;
}


.useraddress{
  padding: 30rpx;
  position: relative;
  background-color: #fff;
}
.no_address .adress_text{
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  margin-left: 80rpx;
}
.no_address .icon_add{
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
}
.no_address .icon_arrow{
  position: absolute;
  right: 30rpx;
  bottom: 40rpx
}

.cart_bottom_bg::before{
  content: '';
  left: 0;
  right: 0;
  bottom: 0;
  height: 2px;
  position: absolute;
  background: repeating-linear-gradient(-45deg,#ff6c6c,#ff6c6c 20%,transparent 0,transparent 25%,#3283fa 0,#3283fa 45%,transparent 0,transparent 50%);
  background-size: 80px;
}

.has_address{
  position: relative;
  font-size: 24rpx;
}
.has_address .icon_location{
  position: absolute;
  left: 0;
  top: 10rpx;
}
.has_address .icon_arrow{
  position: absolute;
  right: 0;
  top: 10rpx;
}
.has_address .address_box{
  margin-left: 70rpx;
}
.has_address .address_box .consigner{
  margin-right: 70rpx;
}

.address{
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
}
.address .addressText_l{
  width: 50%;
}
.address .addressText_r{
  width: 50%;
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #909399;
}
.address .addressText_r .arrow{
  margin-left: 15rpx;
}

.usersay{
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
}
.usersay .usersay_l{
  width: 30%;
}
.usersay .usersay_r{
  width: 70%;
}

.popup_title{
  padding: 20rpx 30rpx;  
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
  position: relative;
}
.popup_title .addressClose{
  position: absolute;
  left: 30rpx;
  color: #1989fa;
}
.popup_title .addressTitle{
  text-align: center;
}
.popup_title .addressClose .icon_left{
  font-size: 24rpx;
}
.popup_info{
  max-height: 1000rpx;
  overflow-y: auto;
  font-size: 24rpx;  
}
.popup_info .item{
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid rgba(204, 204, 204, 0.226);
}
.popup_info .item .item_info{
  margin-left: 20rpx;
}
.popup_info .item .cell{
  margin: 10rpx 0;
}
.close{
  padding: 40rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.close .closeBtn{
  background-color: #f44;
  border: 1rpx solid #f44;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
}

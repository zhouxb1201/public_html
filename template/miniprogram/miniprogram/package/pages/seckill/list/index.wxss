page{
  font-size: 28rpx;
  background-color: #f8f8f8;
}
.head{
  background-color: #fff;
}
.tabs{
  display: flex;  
  color: #fff;
}
.tab_cell{
  flex-basis: 22%;
  flex: 0 0 22%;
  text-align: center;
  background-color: #fff;  
  position: relative;
  padding-bottom: 20rpx;
}
.tab_item{
  background-color: #282831;
  padding: 0 20rpx;
}
.tab_cell .tab_item .secTime{
  font-weight: 800;
  line-height: 44rpx;
}
.tab_cell .tab_item .condition_day{
  font-size: 24rpx;
  line-height: 44rpx;
}

.tab_active .tab_item{
  background-color: #ff454e;
}
.tab_active::after{
  content: '';
  position: absolute;
  border-top: 8px dashed;
  border-right: 8px solid transparent;
  border-left: 8px solid transparent;
  color: #ff454e;
  width: 0;
  height: 0;
  bottom: 3px;
  left: 50%;
  margin-left: -8px;
  z-index: 999;
}


.content_list{
  background-color: #fff;
}
.good_cell{
  padding: 20rpx 30rpx;
  display: flex;
  border-bottom: 1px solid #ebedf0;
}
.good_cell .good_img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;  
}
.good_cell .good_img image{
  width: 100%;
  height: 100%;
}

.good_info{
  flex: 1;
}
.good_info .good_name{
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
  font-size: 24rpx;
  font-weight: 700;
  height: 60rpx;
}

.seckill_num{
  margin: 15rpx 0;
}
.progress_outer{
  width: 80%;
}
.progress{
  width: 100%;
  height: 40rpx;
  overflow: hidden;
  border-radius: 20rpx;
  background: #ff454e47;
  position: relative;
}
.progress .progressbar{
  background-color: #ff454e;
  border-radius: 20rpx;
  color: #fff;
  padding: 0 20rpx;
  height: 100%;
}
.progress .num{
  position: absolute;
  left: 20rpx;
  top: 0;
  z-index: 10;
  color: #fff;
  background-color: transparent;
}
.progress .percent{
  position: absolute;
  right: 20rpx;
  top: 0;
  z-index: 10;
  color: #fff;
}

.seckill_time_num{
  display: flex;
  color: #28b400;
}
.seckill_time_num .space{
  margin: 0 10rpx;
}

.good_price{
  display: flex;
  justify-content: space-between;
}
.price .seckill_price{
  color: #ff454e;
  font-weight: 800;
  margin-right: 20rpx;
}
.price .seckill_price_green{
  color: #28b400;
  font-weight: 800;
  margin-right: 20rpx;
}
.price .normal_price{
  color: #7d7e80;
  text-decoration: line-through;
  font-size: 24rpx;
}

.good_btn .seckill_btn{
  background-color: #ff454e;
  color: #fff;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.good_btn .collect_btn{
  background-color: #28b400;
  color: #fff;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.foot{
  display: flex;
  justify-content: center;
  align-items: center;  
}
.foot .noMore{
  padding: 40rpx 60rpx;
}

.no_open{
  background-color: #fff;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box{
  text-align: center;
}
.box .img{
  width: 400rpx;
  height: 200rpx;
  margin: 30rpx 0;
}
.img image{
  width: 100%;
  height: 100%;
}
page{
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.group_good{
  background-color: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  box-sizing: border-box;
  margin-bottom: 20rpx;  
}
.group_good .good_img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.group_good .good_img image{
  width: 100%;
  height: 100%;
}
.group_good .good_info{
  flex: 1;
}
.group_good .good_info .good_name{
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
  font-weight: 700;
  height: 80rpx;
}
.group_good .good_info .good_price{
  margin: 10rpx 0;
}
.group_good .good_info .good_price .red_price{
  color: #f44;
  margin-right: 10rpx;
}
.group_good .good_info .good_price .normal_price{
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}
.group_good .good_info .end_time{
  display: flex;
}
.group_good .good_info .reset_time{
  color: #f44;
}
.group_good .good_info .reset_time .time{
  color: #fff;
  background-color: #f44;
  padding: 2rpx 4rpx;
  border-radius: 5rpx;
  margin: 0 4rpx;
}

.group_user{
  background-color: #fff;
  margin: 20rpx 0; 
}
.user_box_title{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom:1px solid #dbdbdb; 
}

.user_img_list{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 30rpx;
}
.user_img_list .user_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_img_list .user_img image{
  width: 100%;
  height: 100%;
}
.user_img_list .help{
  width: 100rpx;
  height: 100rpx;
  border: 1px dashed #999;
  line-height: 100rpx;
  text-align: center;
  font-size: 60rpx;
  border-radius: 50%;
  color: #999;
}
.tips_text{
  text-align: center;
  padding: 20rpx 0;
}
.join_btn{
  background-color: #f44;
  color: #fff;
  margin: 20rpx 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
}
.invite_friend_btn{
  background-color: #ff9600;
  color: #fff;
  margin: 20rpx 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
}
.order_detail{
  text-align: center;
  padding: 20rpx 30rpx;
}


.group_end{
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  flex-direction: column;
}
.end_text{
  margin-top: 20rpx;
}

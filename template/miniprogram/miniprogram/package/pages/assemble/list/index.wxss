page{
  background-color: #f8f8f8;
  font-size: 28rpx;
}

.list{
  background-color: #fff;
}

.item{
  padding: 20rpx 30rpx;
  display: flex;
  border-bottom: 1px solid #ebedf0;
}
.item .good_img{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item .good_img image{
  width: 100%;
  height: 100%;
}

.item .good_info{
  flex: 1;
  position: relative;
}
.item .good_info .good_name{
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
  font-weight: 700;
}
.item .good_info .already_num{
  font-size: 24rpx;
  line-height: 46rpx;
}

.item .good_info .price_logo{
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  line-height: 48rpx;
}
.logo_group{
  display: flex;
}
.logo_group .img{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #ddd;
  margin-left: -16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.logo_group .img image{
  width: 100%;
  height: 100%;
}

.item .good_info .price_logo .price{
  color: #f44;
  font-size: 24rpx;
}

.foot{
  display: flex;
  justify-content: center;
  align-items: center;  
}
.foot .noMore{
  padding: 40rpx 60rpx;
  color: #969799;
}
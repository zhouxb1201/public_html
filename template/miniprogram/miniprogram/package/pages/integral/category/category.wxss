/* miniprogram/package/pages/integral/category/category.wxss */

page {
  font-size: 28rpx;
}

.category_search {
  padding: 16rpx 30rpx;
  border-bottom: 2px solid #f5f5f5;
}

.category_search .search_input {
  position: relative;
}

.category_search .search_input input {
  background-color: #f5f5f5;
  padding: 5rpx;
}
.search_input{
  border:1rpx solid #fff;
  color:#999;
  padding-left:60rpx;
  font-size:25rpx;
  height:60rpx;
  background: #f5f5f5;
  line-height: 60rpx;
}
.icon-search{
  position: absolute;
  top:50%;
  left: 12rpx;
  transform: translateY(-50%);
}
.item {
  margin: 16rpx 8rpx 40rpx;
  overflow: hidden;
}

.item-child {
  width: 25%;
  float: left;
  text-align: center;
}

.item-box {
  margin: 8rpx;
}
.item-child .l_item_img{
  height:160rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.item-child .l_item_img image{
  width: 100%;
  height: 100%;
}
.item-child text{
  font-size: 24rpx;
  color: #161616b9;
}
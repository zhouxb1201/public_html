/* miniprogram/package/pages/wheelsurf/wheelsurf.wxss */

page {
  background: linear-gradient(linear, left top, left bottom, from(#e43e23), to(#e41b47));
  background: -webkit-gradient(linear, left top, left bottom, from(#e43e23), to(#e41b47));
  position: relative;
  padding-bottom: 40rpx;
  /*background: #e41b47;*/
}

.banner {
  width: 100%;
  overflow: hidden;
  min-height: 112rpx;
}

.banner image {
  max-width: 100%;
  width: 100%;
  height: auto;
  display: block;
}

.right-tag {
  position: absolute;
  z-index: 10;
  top: 160rpx;
  right: 0;
}

.right-tag .menu {
  color: #f44;
  background-color: #fff;
  padding: 12rpx 20rpx;
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
  font-size: 28rpx;
  margin-top: 40rpx;
  display: block;
}

.wheel-wrap {
  position: absolute;
  top: 280rpx;
  left: 0;
  width: 100%;
}

.wheel-main {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-top: 20rpx;
}

.wheel-bg {
  position: relative;
  width: 74%;
  padding-bottom: 74%;
  border-radius: 50%;
}

.wheel-pointer-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -56%);
  width: 25%;
  z-index: 100;
}

.wheel-pointer {
  position: relative;
  padding-bottom: 100%;
  width: 100%;
}

.wheel-pointer image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  vertical-align:top;
}

.wheel-chance {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.wheel-chance text {
  color: #ff0;
}

.palace {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: block;
}

.rotate-wrap {
  width: 80%;
  height: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 10;
  transform: translate(-50%, -50%);
}

.rotate-wrap .ul {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
}

.rotate-wrap .ul .li {
  display: block;
  position: absolute;
  top: 0;
  -webkit-transform-origin: 50% 100%;
  transform-origin: 50% 100%;
  height: 50%;
}

.rotate-wrap .ul .li image {
  width: 68rpx;
  height: 68rpx;
  display: block;
  margin: auto;
  vertical-align:top;
}

.rotate-wrap .ul .li text {
  display: block;
  font-size: 24rpx;
  color: #c30b29;
  overflow: hidden;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  width: 60%;
  margin: auto;
}

.prize-wrap {
  margin: 40rpx 40rpx 0 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: block;
}

.prize-title {
  text-align: center;
  font-size: 28rpx;
  color: #e84d2f;
  padding: 36rpx;
  display: block;
}

.prize-list-wrap {
  overflow: hidden;
  padding: 12rpx 40rpx;
  color: #666;
  height: 356rpx;
}

.prize-list-wrap .item-ul {
  position: relative;
  display: block;
  overflow: hidden;
}

.prize-list-wrap .item-ul .item-li {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  display: flex;
}

.prize-list-wrap .item-ul .item-li text {
  flex: 1;
}

.prize-list-wrap .item-ul .item-li text:last-child {
  text-align: right;
}


page {
  background: linear-gradient(#fe2023 20%, #f54244 30%);
  font-size: 28rpx;
}
.mb{
  margin-bottom:-104rpx;
}
.img-bg {
  width: 100%;
  height: auto;
  position: relative;
}

.img-bg .img {
  width: 84%;
  height: auto;
  margin: 0 auto;
  position: relative;
}

.img-bg image {
  width: 100%;
  height: auto;
  display: block;
}

.img-bg .img .name {
  color: #ff454e;
  text-align: center;
  position: absolute;
  top: 0;
  width: 100%;
  font-size: 52rpx;
  font-weight: 800;
  padding: 80rpx 0;
}

.img-bg .img .btn-box {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
}

.img-bg .img .btn-box .btn {
  color: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  background-color: #f44;
  border: 0;
  text-align: center;
  box-sizing: border-box;
  -webkit-appearance: none;
  appearance: none;
  height: 88rpx;
  line-height: 84rpx;
  border-radius: 40rpx;
  display: block;
  margin: 40rpx 60rpx;
}

.cell-group {
  width: 84%;
  margin: 60rpx auto;
}

.cell-group .cell {
  color: #fff;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.cell-group .cell .tag {
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  color: #f44;
  background: #feda6f;
  display: inline-block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}
.trans{
  opacity: 0;
  transition: all 0.1s;
}


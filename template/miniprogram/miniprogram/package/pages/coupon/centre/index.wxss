page{
  background-color: #f8f8f8;
  font-size: 24rpx;
}

.box{
  margin: 20rpx;
  display: flex;
}
.box .item{
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
}
.box .item .img{
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box .item .img image{
  width: 100%;
  height: 100%;
}
.box .item .info{
  margin-left: 20rpx;
  flex: 1;
}
.box .item .info .name{
  font-size: 28rpx;
}
.box .item .info .price{
  font-size: 28rpx;
  color: #f44;
}



.circle{
  flex: 1;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  margin-left: 2rpx;

}
.circle_box{ 
  position: relative;
  height: 100rpx;
  width: 100rpx;
  margin: 0 auto;
  text-align: center;
  display: inline-block;
 
}
.circle_bg{
  position: absolute;
}
.circle_text{
  position: absolute;  
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;  
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #f44;
}
canvas{
  width: 100%;
  height: 100%;
}
.draw_btn{
  background-color: #f44;
  color: #fff;
  padding: 2rpx;
  border-radius: 20rpx;
  margin-top: 4rpx;
  text-align: center;
}
.draw_btn_disable{
  background-color: #e8e8e8;
  color: #999;
  padding: 2rpx;
  border-radius: 20rpx;
  margin-top: 4rpx;
  text-align: center;
}
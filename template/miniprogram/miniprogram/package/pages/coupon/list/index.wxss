page{
  font-size: 28rpx;
  background-color: #f8f8f8;
}


.not_use_item{
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 30rpx;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}
.not_use_item::after{
  content: '';
  display: block;
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
  top: 50%;
  left: -10rpx;
  margin-top: -16rpx;  
}
.not_use_item::before{
  content: '';
  display: block;
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
  top: 50%;
  right: -10rpx;
  margin-top: -16rpx;  
}
.not_use_item .info{
  flex: 1;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 10;
}
.not_use_item .info .money{
  color: #606266;
  width: 180rpx;
}
.not_use_item .info .use{
  color: #ffab33;
}
.not_use_item .info .money .price_num{
  font-size: 44rpx;
  margin-bottom: 8rpx;
}
.not_use_item .info .not_use_text{
  flex: 1;
}
.not_use_item .info .not_use_text .name{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  margin-bottom: 16rpx;   
}
.not_use_item .info .not_use_text .time{
  font-size: 24rpx;
  color: #909399;
}
.not_use_item .info .not_use_text .detail{
  font-size: 24rpx;
  color: #008aff;
  display: flex;
  align-items: center;
}
.not_use_item .info .not_use_text .detail .icon{
  margin-left: 10rpx;
  transform: rotate(180deg);
  font-size: 20rpx;
  line-height: 40rpx;
}
.icon{
  font-size: 100rpx;
}

.noMore{
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-top: 120rpx; 
}
.noMore .coupon_more{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex: 1;
  color: #bbb;
}
.noMore .coupon_more .no_coupon_img{
  width: 240rpx;
  margin-bottom: 20rpx;
}
.noMore .coupon_more .no_coupon_img image{
  width: 100%;
  height: 100%;
}
.noMore .coupon_more .coupon_btn{
  height: 40rpx;
  line-height: 40rpx;
  background-color: #FF454E;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  width: 400rpx;
  margin-top: 80rpx;
  
}